---
import Layout from '../layouts/Layout.astro';
import { otherPlatforms } from '../data/platforms';
---

<Layout title="Andre Platforme - Digitale Læremidler">
	<div class="mb-6">
		<a href="/portaler" class="text-primary hover:underline">&larr; Tilbage til oversigt</a>
	</div>
	
	<h2 class="text-2xl font-bold text-gray-900 mb-6">Andre Relevante Platforme og Læremidler</h2>
	
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		{otherPlatforms.map(platform => (
			<div class="bg-white p-6 rounded-lg shadow-sm">
				<h3 class="text-xl font-semibold text-gray-900">{platform.name}</h3>
				{platform.publisher && (
					<p class="mt-2 text-gray-600">{platform.publisher}</p>
				)}
			</div>
		))}
	</div>
</Layout>