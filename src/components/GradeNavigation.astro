---
interface Props {
	currentGrade: number;
}

const { currentGrade } = Astro.props;

const grades = Array.from({ length: 10 }, (_, i) => i);
---

<nav class="bg-white/80 backdrop-blur-sm rounded-lg p-4 mb-6 border border-neutral">
	<div class="flex flex-wrap gap-2">
		{grades.map((grade) => (
			<a
				href={`/grade/${grade}`}
				class={`px-3 py-1.5 rounded-full text-sm font-medium transition-colors ${
					currentGrade === grade
						? 'bg-primary text-white'
						: 'bg-neutral-light text-secondary hover:bg-accent-light hover:text-primary'
				}`}
			>
				{grade}. Ã¥rgang
			</a>
		))}
	</div>
</nav>